{
  "name": "latex2typst-web",
  "version": "0.1.0",
  "description": "Web app to convert LaTeX/Markdown to Typst",
  "type": "module",
  "scripts": {
    "dev": "rspack serve",
    "build": "rspack build",
    "preview": "vite preview --outDir dist",
    "build:wasm": "cd .. && wasm-pack build --target web --features wasm && cp -r pkg web/src/wasm"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@rspack/cli": "^1.1.7",
    "@rspack/core": "^1.1.7",
    "@vue/compiler-sfc": "^3.4.15",
    "vue-loader": "^17.4.2",
    "vue-style-loader": "^4.1.3",
    "css-loader": "^6.10.0",
    "vite": "^5.0.0"
  }
}
